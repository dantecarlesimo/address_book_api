COMPOSE EMAIL

<li class="list-group-item"><b>Send Email To:</b> <%= @contact.email %></li>



<%= form_for :email, url: email_contacts_path(@contact.id), method: "post" do |f| %>
  <div class="form-group">
    <%= f.label :subject %>
    <%= f.text_field :subject %>
  </div>
  <div class="form-group">
    <%= f.label :message %>
    <%= f.text_area :message %>
  </div>
  
  <%= f.hidden_field :email_address, value: @contact.email %>

  <%= f.submit :Send %>
<% end %>

